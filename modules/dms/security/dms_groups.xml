<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mail.menu_root_discuss" model="ir.ui.menu">
            <field name="groups_id" eval="[(3,ref('base.group_user')),(4, ref('base.user_admin'))]"/>
        </record>

        <record id="calendar.mail_menu_calendar" model="ir.ui.menu">
            <field name="groups_id" eval="[(3,ref('base.group_user')),(4, ref('base.user_admin'))]"/>
        </record>

        <record id="contacts.menu_contacts" model="ir.ui.menu">
            <field name="groups_id" eval="[(3,ref('base.group_user')),(3,ref('base.group_partner_manager')),(4, ref('base.user_admin'))]"/>
        </record>
         <record model="ir.module.category" id="module_category_callcenter_management">
            <field name="name">Business Center</field>
            <field name="description">Helps you handle your Call Center Operations.</field>
            <field name="sequence">3</field>
        </record>
        <record id="group_dms_telecaller" model="res.groups">
            <field name="name">Telecaller: Own Documents Only</field>
            <field name="category_id" ref="dms.module_category_callcenter_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to his own data in the callcenter application.</field>
        </record>
         <record id="group_dms_callcenter_lead" model="res.groups">
            <field name="name">Team Lead: All Documents</field>
            <field name="category_id" ref="dms.module_category_callcenter_management"/>
            <field name="implied_ids" eval="[(4, ref('dms.group_dms_telecaller'))]"/>
            <field name="comment">the user will have access to all records of everyone in the call center team.</field>
        </record>

        <record id="group_sale_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">the user will have an access to the sales configuration as well as statistic reports.</field>
            <field name="category_id" ref="dms.module_category_callcenter_management"/>
            <field name="implied_ids" eval="[(4, ref('dms.group_dms_callcenter_lead'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
