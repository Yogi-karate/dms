<?xml version="1.0"?>
<odoo>

        <record id="view_dms_lead2opportunity_partner" model="ir.ui.view">
            <field name="name">dms.lead2opportunity.partner.form</field>
            <field name="model">dms.lead2opportunity.partner</field>
            <field name="arch" type="xml">
                <form string="Convert to Booking">
                    <group>
                    <field name="name"/>
                    <field name="service_type" attrs="{'invisible': [('service_type', '=', 'Insurance')]}"/>
                    <field name="mobile"/>
                        <field name="booking_type" attrs="{'invisible': [('service_type', '=', 'Insurance')]}"/>
                    <field name="dop" attrs="{'invisible': ['|',('booking_type', '!=', 'pickup'),('service_type', '=', 'Insurance')]}"/>
                    <field name="pick_up_address" string="Pickup Address" attrs="{'invisible': ['|',('booking_type', '!=', 'pickup'),('service_type', '=', 'Insurance')]}"/>
                        <field name="location_id" string="Preferred Service Location" options="{'no_create':True,'no_open':True}"/>
                        <field name="remarks"/>
                    </group>
                    <group name="action" attrs="{'invisible': [('name', '!=', 'convert')]}" string="Customers" col="1">
                        <field name="action" nolabel="1" widget="radio"/>
                        <group col="2">
                            <field name="partner_id" widget="res_partner_many2one" domain="[('customer', '=', True)]" context="{'search_default_customer': 1, 'show_vat': True}" attrs="{'required': [('action', '=', 'exist')], 'invisible':[('action','!=','exist')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_apply" string="Confirm Booking" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_dms_lead2opportunity_partner" model="ir.actions.act_window">
            <field name="name">Service Booking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dms.lead2opportunity.partner</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_dms_lead2opportunity_partner"/>
            <field name="target">new</field>
        </record>



</odoo>
