      <record id="action_dms_service_vehicle_lost" model="ir.actions.act_window">
        <field name="name">Lost Service Leads</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dms.vehicle.lead</field>
         <field name="view_ids"
               eval="[(5, 0, 0),
                           (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_case_tree_view_leads_new_lost_service')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('crm_case_form_view_leads_new')})]"/>
        <field name="context"></field>
        <field name="domain">['&amp;',('active', '=', False),('call_type','=','Service')]</field>
           <field name="search_view_id" ref="view_dms_vehicle_lead_filter"/>
    </record>

    <record id="action_dms_insurance_vehicle_lost" model="ir.actions.act_window">
