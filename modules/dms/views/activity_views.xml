<?xml version="1.0"?>
<odoo>
      <record id="crm_case_tree_view_activities_new" model="ir.ui.view">
        <field name="name">mail.activity.new.tree</field>
        <field name="model">mail.activity</field>
        <field name="arch" type="xml">
            <tree string="Activities">

                <field name="create_date" invisible="1"/>
                <field name="res_name" string="Lead"/>
                <field name="customer_name"/>
                <field name="mobile"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>

      <record id="action_new_activity_form" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mail.activity</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                           (0, 0, {'view_mode': 'tree', 'view_id': ref('crm_case_tree_view_activities_new')})]"/>
        <field name="context"></field>
        <field name="domain">[('res_model','=','dms.vehicle.lead'),('flag','=','flag')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a Vehicle
            </p>
            <p>
                create leads
            </p>
        </field>
    </record>


</odoo>